    "drivers": [
	    {
		    "id": "hyperion",
		    "class": "other",
		    "capabilities": [ "onoff", "dim", "light_hue", "light_saturation", "hyperion_effect" ],
		    "mobile": {
			    "components": [
				    {
					    "id": "icon",
					    "capabilities": [ "onoff" ]
				    },
				    {
					    "id": "picker",
					    "capabilities": [ "hyperion_effect" ]
				    },
				    {
					    "id": "color",
					    "capabilities": [ "light_hue", "light_saturation" ]
				    }
			    ]
		    },
		    "name": {
			    "en": "Hyperion"
		    },
		    "images": {
			    "large": "./drivers/hyperion/assets/images/large.jpg",
			    "small": "./drivers/hyperion/assets/images/small.jpg"
		    },
		    "pair": [
			    {
				    "id": "enter_address_and_pair"
			    }
		    ],
		    "settings": [
			    {
                    "type": "group",
                    "label": {
                        "en": "Server settings"
                    },
                    "children": [
		                {
		                    "id": "address",
		                    "type": "text",
		                    "value": "",
		                    "label": {
		                        "en": "Address",
		                        "nl": "Adres"
		                    }
		                },
		                {
			                "id": "port",
			                "type": "number",
			                "value": 19444,
			                "label": {
				                "en": "Port",
				                "nl": "Poort"
			                },
			                "min": 0,
			                "max": 65535,
			                "step": 1
		                },
		                {
			                "id": "priority",
			                "type": "number",
			                "label": {
				                "en": "Priority",
				                "nl": "Prioriteit"
			                },
			                "hint": {
				                "en": "A lower number is higher priority. The highest priority client has control.",
				                "nl": "Een lager getal is hogere prioriteit. De client met de hoogste prioriteit heeft de controle."
			                },
			                "min": 0,
			                "max": 255,
			                "step": 1,
			                "value": 1
		                }
		            ]
		        }
		    ]
	    }
    ],
    "flow": {
	    "actions": [
		    {
			    "id": "effect",
			    "title": {
				    "en": "Show an Effect",
				    "nl": "Laat een Effect zien"
			    },
			    "args": [
				    {
					    "name": "device",
					    "type": "device",
					    "filter": "driver_id=hyperion"
				    },
				    {
					    "name": "effect",
					    "type": "autocomplete"
				    }
			    ]
		    },
		    {
			    "id": "clear",
			    "title": {
				    "en": "Clear",
				    "nl": "Wissen"
			    },
